<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.braeden.waveswap_app.Fragments.PlaySoundFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/waveswap_v1"
        android:layout_above="@+id/transferButton"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="Transfer Image"
        android:id="@+id/transferButton"
        android:layout_above="@+id/browseButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:text="Transfer Text"
        android:id="@+id/browseButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/browseButton"
        android:layout_toStartOf="@+id/browseButton" />
</RelativeLayout>
